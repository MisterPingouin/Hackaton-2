{% endblock %}
{% block body %}

{% if app.user %}
<div class="col-xl-6">

    {{ form_start(form) }}
    <div id="choice-marque">
        {{ form_row(form.marque) }}
    </div>

    <div id="choice-modele" class="d-none">
        {{ form_row(form.modele) }}
    </div>

    <div id="choice-ram" class="d-none">
        {{form_row(form.ram)}}
    </div>

    <div id="choice-stockage" class="d-none">
        {{ form_row(form.stockage) }}
    </div>

    <div id="choice-etat" class="d-none">
        {{form_row(form.etat)}}
    </div>

    <button id="choice-btn" class="d-none btn btn-primary">{{ button|default('Envoyer') }}</button>
    {{ form_end(form) }}
</div>
{% endif %}
{% endblock %}

