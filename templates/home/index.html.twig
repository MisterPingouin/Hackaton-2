{% block title %}Home
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('showChoice') }}
		{% if app.user %}
 <script src="https://cdn.botpress.cloud/webchat/v0/inject.js"></script>
<script>
