{% extends 'base.html.twig' %}

{% block title %}Liste des téléphones disponibles
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between pt-3 px-2">
    <h1>Etat du stock:</h1>
    <a href="{{ path('app_add_phone') }}">
        <button class="btn btn-primary text-white">Ajouter un nouveau téléphone</button>
    </a>
</div>
<div class="table table-responsive-lg p-3">
    <table class="table table-striped table-bordered border-dark">
        <thead class="table-primary">
            <tr>
                <th>Marque</th>
                <th>Modèle</th>
                <th>Ram</th>
                <th>Stockage</th>
                <th>Etat</th>
                <th>Prix</th>
                <th>Voir</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for phone in phones %}
            <tr>
                <td>{{ phone.marque.name }}</td>
                <td>{{ phone.modele.name }}</td>
                <td>{{ phone.ram }}
                    Go</td>
                <td>{{ phone.stockage }}
                    Go</td>
                <td>{{ phone.etat }}</td>
                <td>{{ phone.prix }}€</td>
                <td> <a class="btn btn-primary text-white" href="{{ path('app_phone_show', {'id': phone.id}) }}">
                        Voir</a></td>
                <td>
                    {{ include('phone/_delete_form.html.twig') }}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7">Aucun téléphone en stock</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}